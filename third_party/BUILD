package(default_visibility = ["//visibility:public"])

# Libs provided by the system.

cc_library(
    name = "ncurses",
    linkopts = ["-lncurses"],
)

cc_library(
    name = "pthread",
    linkopts = ["-pthread"],
)

cc_library(
    name = "python3",
    linkopts = ["-lpython3.6m"],
)

cc_library(
    name = "rt",
    linkopts = ["-lrt"],
)

cc_library(
    name = "sqlite3",
    linkopts = ["-lsqlite3"],
)

cc_library(
    name = "uuid",
    linkopts = ["-luuid"],
)
